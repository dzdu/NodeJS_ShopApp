<h1>Cart</h1>

<div id="cart">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
          <th></th>
        <th>Course</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      
      {{#each courses}}
      <tr>
        <td><img src="{{image}}" alt="{{title}}" width="100"></td>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn red js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Remove</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

  <form action="/orders" method="POST" class="purchase-form">
        <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn blue"> Create order</button>
  </form>
{{else}}
  <p>Cart is empty</p>
{{/if}}
</div>