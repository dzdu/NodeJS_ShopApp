<div class="row">
    <div class="col s6 offset-s3">
      {{#if resetError}}
          <h5 class="alert">{{resetError}}</h5>
      {{/if}}
      <h3>Create new password</h3>
      <form action="/auth/password" method="POST">
              <div class="input-field">
                <input id="password" type="password" class="validate" required name="password">
                <label for="password">New password</label>
              <span class="helper-text" data-error="Wrong email" data-success=""></span>
              </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <input type="hidden" name="userId" value="{{userId}}">
        <input type="hidden" name="token" value="{{token}}">

        <div class="btns">
          <button class="btn " type="submit">Create new password</button>
          <a href="./login">Back to login page</a>
          </div>
    </form>

    </div>
  </div>
