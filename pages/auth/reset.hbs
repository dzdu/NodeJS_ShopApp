 <div class="auth">

<div class="row">
    <div class="col s6 offset-s3">
      {{#if resetError}}
          <h5 class="alert">{{resetError}}</h5>
      {{/if}}
      {{#if wrongError}}
          <h5 class="alert">{{wrongError}}</h5>
      {{/if}}
      <h3>Reset password</h3>
      <form action="/auth/reset" method="POST">
              <div class="input-field">
                <input id="email" type="email" class="validate" required name="email">
                <label for="email">Your email address</label>
              <span class="helper-text" data-error="Wrong email" data-success=""></span>
              </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="btns">
          <button class="btn red" type="submit">Reset password</button>
          <a href="./login">Back to login page</a>
          </div>
    </form>

    </div>
  </div>

   </div>