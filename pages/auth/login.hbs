 <div class="auth">

<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a href="#login" class="active"> Login </a></li>
        <li class="tab col s6"><a  href="#register"> Register </a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      
      {{#if loginError}}
          <h5 class="alert">{{loginError}}</h5>
      {{/if}}
     
      
      <h3>Login to store</h3>

      <form action="/auth/login" method="POST">
              <div class="input-field">
                <input id="email" type="email" class="validate" required name="email">
                <label for="email">Your email address</label>
              <span class="helper-text" data-error="Wrong email" data-success=""></span>
              </div>
              <div class="input-field">
                <input id="password" type="password" class="validate" required name="password">
                <label for="password">Password</label>
              <span class="helper-text" data-error="Add password" data-success=""></span>
              </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="btns">
          <button class="btn btn-primary" type="submit">Login</button>
          <a href="./reset">Forgot password?</a>
          </div>
    </form>

    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
          <h5 class="alert">{{registerError}}</h5>
      {{/if}}
      
      <h3>Register</h3>
        <form action="/auth/register" method="POST" novalidate>
              <div class="input-field">
                <input id="remail" type="email" class="validate" required name="email">
                <label for="remail">Your email address</label>
              <span class="helper-text" data-error="Wrong email" data-success=""></span>
              </div>
              <div class="input-field">
                <input id="name" type="text" class="validate" required  name="name">
                <label for="name">Your name</label>
                <span class="helper-text" data-error="Add name" data-success=""></span>
              </div>
              <div class="input-field">
                <input id="rpassword" type="password" class="validate" required name="password"  minlength="8">
                <label for="rpassword">Password</label>
              <span class="helper-text" data-error="Add password, min length 8 characters" data-success=""></span>
              </div>             
               <div class="input-field">
                <input id="confirm" type="password" class="validate" required name="confirm">
                <label for="confirm">Confirm Password </label>
              <span class="helper-text" data-error="Add password" data-success=""></span>
              </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
          <button class="btn btn-primary" type="submit">Register</button>
    </form>

    </div>
  </div>

   </div>