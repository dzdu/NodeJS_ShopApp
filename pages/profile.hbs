<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        <img src="/{{user.avatarUrl}}" alt="{{user.name}}" class="avatar">
        {{else}}
        <img src="https://cdn4.iconfinder.com/data/icons/small-n-flat/24/user-alt-512.png" alt="no avatar" class="avatar" title="no avatar"> 

        {{/if}}
    </div>
    
    <div class="col s6">
    <form action="/profile" method="POST" enctype="multipart/form-data">
        <p>Your email: <b>{{user.email}}</b></p>
        <div class="input-field">
            <input id="name" type="text" class="validate" required name="name" value="{{user.name}}" >
            <label for="name">Your name</label>
            <span class="helper-text" data-error="Name must contain at least 3 characters" data-success=""></span>
        </div>
        <div class="file-field input-field">
            <div class="btn">
                <span>Avatar</span>
                <input type="file" name="avatar">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn ">Save changes</button>
        </form>
    </div>
</div>