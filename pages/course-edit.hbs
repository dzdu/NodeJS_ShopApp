<h1>Edit {{course.title}}</h1>
    <form action="/courses/edit" method="POST" class="edit-form">
        <div class="input-field">
          <input id="title" type="text" class="validate" required name="title" value="{{course.title}}">
          <label for="title">Course name</label>
        <span class="helper-text" data-error="Add name" data-success="Match perfectly"></span>
        </div>
        <div class="input-field">
          <input id="price" type="number" class="validate" required min="1" name="price" value="{{course.price}}">
          <label for="price">Price</label>
          <span class="helper-text" data-error="Add price" data-success="Match perfectly"></span>
        </div>
        <div class="input-field">
          <input id="image" type="text" class="validate"  name="image" value="{{course.image}}">
          <label for="image">URL IMG</label>
        <span class="helper-text" data-error="Add image" data-success="Match perfectly"></span>
        </div>

    <input type="hidden" name="id" value="{{course.id}}">
        <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary" type="submit">Edit course</button>
    </form>
    <form action="/courses/remove" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <input type="hidden" name="id" value="{{course.id}}">
        <button class="btn red" type="submit">Remove course</button>
    </form>
</div>