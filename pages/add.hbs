<h1>Add</h1>
    <form action="/add" method="POST">
        <div class="input-field">
          <input id="title" type="text" class="validate" required name="title">
          <label for="title">Course name</label>
        <span class="helper-text" data-error="Add name" data-success="Match perfectly"></span>
        </div>
        <div class="input-field">
          <input id="price" type="number" class="validate" required min="1" name="price">
          <label for="price">Price</label>
          <span class="helper-text" data-error="Add price" data-success="Match perfectly"></span>
        </div>
        <div class="input-field">
          <input id="image" type="text" class="validate" required name="image">
          <label for="image">URL IMG</label>
        <span class="helper-text" data-error="Add image" data-success="Match perfectly"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add course</button>
    </form>
  </div>